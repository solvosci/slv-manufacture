<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form (in MRP Purchase Service Link)</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field
            name="groups_id"
            eval="[(4, ref('mrp.group_mrp_user'))]"
        />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button type="object" name="action_mrp_production" class="oe_stat_button" icon="fa-wrench" attrs="{'invisible': [('production_count', '=', 0)]}">
                    <field name="production_ids" invisible="1"/>
                    <field name="production_count" widget="statinfo" string="Serv. Prod(s)"/>
                </button>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree" position="inside">
                <field name="mrp_production_id" optional="hide" />
            </xpath>
        </field>
    </record>

</odoo>
