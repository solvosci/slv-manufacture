<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action: Stage Manufacturing Report -->
    <record model="ir.actions.act_window" id="action_mdc_rpt_stage_manufacturing">
        <field name="name">Stage Manufacturing Report</field>
        <field name="res_model">mdc.rpt_stage_manufacturing</field>
        <field name="view_mode">tree,graph,pivot</field>
        <field name="search_view_id" ref="mdc_rpt_stage_manufacturing_search"/>
        <field name="context">{"search_default_today":1}</field>
        <field name="limit">2000</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Not possible.
          </p><p>
            Can't create or update records in this view.
          </p>
        </field>
    </record>

    <record id="action_mdc_rpt_stage_manufacturing_tree" model="ir.actions.act_window.view">
        <field name="view_mode">tree</field>
        <field name="sequence" eval="4"/>
        <field name="view_id" ref="mdc_rpt_stage_manufacturing_tree"/>
        <field name="act_window_id" ref="action_mdc_rpt_stage_manufacturing"/>
    </record>

    <record id="action_mdc_rpt_stage_manufacturing_graph" model="ir.actions.act_window.view">
        <field name="view_mode">graph</field>
        <field name="sequence" eval="4"/>
        <field name="view_id" ref="mdc_rpt_stage_manufacturing_graph"/>
        <field name="act_window_id" ref="action_mdc_rpt_stage_manufacturing"/>
    </record>

    <record id="action_mdc_rpt_stage_manufacturing_pivot" model="ir.actions.act_window.view">
        <field name="view_mode">pivot</field>
        <field name="sequence" eval="4"/>
        <field name="view_id" ref="mdc_rpt_stage_manufacturing_pivot"/>
        <field name="act_window_id" ref="action_mdc_rpt_stage_manufacturing"/>
    </record>

    <!-- Action: Line Manufacturing Report -->
    <record model="ir.actions.act_window" id="action_mdc_rpt_line_manufacturing">
        <field name="name">Line Manufacturing Report</field>
        <field name="res_model">mdc.rpt_line_manufacturing</field>
        <field name="view_mode">tree</field>
        <field name="search_view_id" ref="mdc_rpt_line_manufacturing_search"/>
        <field name="context">{"search_default_today":1}</field>
        <field name="limit">2000</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Not possible.
          </p><p>
            Can't create or update records in this view.
          </p>
        </field>
    </record>

    <record id="action_mdc_rpt_line_manufacturing_tree" model="ir.actions.act_window.view">
        <field name="view_mode">tree</field>
        <field name="sequence" eval="4"/>
        <field name="view_id" ref="mdc_rpt_line_manufacturing_tree"/>
        <field name="act_window_id" ref="action_mdc_rpt_line_manufacturing"/>
    </record>

    <!-- Action: Employee Yield Report -->  
    <record model="ir.actions.act_window" id="action_mdc_rpt_employee_yield">
        <field name="name">Employee Yield Report</field>
        <field name="res_model">mdc.rpt_employee_yield</field>
        <field name="view_mode">tree</field>
        <field name="search_view_id" ref="mdc_rpt_employee_yield_search"/>
        <field name="context">{"search_default_today":1}</field>
        <field name="limit">2000</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Not possible.
          </p><p>
            Can't create or update records in this view.
          </p>
        </field>
    </record>

    <record id="action_mdc_rpt_employee_yield_tree" model="ir.actions.act_window.view">
        <field name="view_mode">tree</field>
        <field name="sequence" eval="4"/>
        <field name="view_id" ref="mdc_rpt_employee_yield_tree"/>
        <field name="act_window_id" ref="action_mdc_rpt_employee_yield"/>
    </record>

    <!-- Reporting menu -->
    <menuitem id="mdc_rpt_stage_manufacturing_menu"
        name="Stage Manufacturing Report"
        action="action_mdc_rpt_stage_manufacturing"
        parent="mdc_menu_reporting"
        sequence="10"/>

    <menuitem id="mdc_rpt_employee_yield_menu"
        name="Employee Yield Report"
        action="action_mdc_rpt_employee_yield"
        parent="mdc_menu_reporting"
        sequence="15"/>

    <menuitem id="mdc_rpt_line_manufacturing_menu"
        name="Line Manufacturing Report"
        action="action_mdc_rpt_line_manufacturing"
        parent="mdc_menu_reporting"
        sequence="20"/>

</odoo>
