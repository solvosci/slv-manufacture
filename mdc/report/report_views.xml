<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- TODO verify attachment_use=False is by default -->
        <record id="stage_manufacturing_xlsx" model="ir.actions.report">
            <field name="name">Print to XLSX</field>
            <field name="model">mdc.rpt_stage_manufacturing</field>
            <field name="binding_model_id" ref="mdc.model_mdc_rpt_stage_manufacturing" />
            <field name="type">ir.actions.report</field>
            <field name="report_name">mdc.rpt_stage_manufacturing</field>
            <field name="report_type">xlsx</field>
            <field name="report_file">mdc_rpt_stage_manufacturing</field>
        </record>

        <!-- Search view: default search for Stage Manufacturing -->
        <record id="mdc_rpt_stage_manufacturing_search" model="ir.ui.view">
            <field name="name">mdc.rpt_stage_manufacturing.search</field>
            <field name="model">mdc.rpt_stage_manufacturing</field>
            <field name="arch" type="xml">
                <search string="stage Manufacturing Report">
                    <field name="lot_name"/>
                    <field name="employee_code"/>
                    <field name="employee_name"/>
                    <field name="shift_code"/>
                    <field name="stage_name"/>
                    <field name="line_code"/>
                    <filter name="today" string="Today" domain="[('create_date', '&gt;=', current_date)]"/>
                    <filter name="week" string="This Week"
                        domain="[
                            '&amp;',
                            ('create_date', '>=', (context_today() + relativedelta(weeks=-1,days=1,weekday=0)).strftime('%Y-%m-%d')),
                            ('create_date', '&lt;=', (context_today() + relativedelta(weekday=6)).strftime('%Y-%m-%d')),
                        ]"/>
                    <group expand="1" string="Group By">
                        <filter string="Lot Name" name="groupby_lot_name" domain="[]" context="{'group_by':'lot_name'}"/>
                        <filter string="Employee Code" name="groupby_employee" domain="[]" context="{'group_by':'employee_code'}"/>
                        <filter string="Shift Code" name="groupby_shift" domain="[]" context="{'group_by':'shift_code'}"/>
                        <filter string="Stage Name" name="groupby_stage" domain="[]" context="{'group_by':'stage_name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Tree view: default view for Stage Manufacturing Report -->
        <record id="mdc_rpt_stage_manufacturing_tree" model="ir.ui.view">
            <field name="name">mdc.rpt_stage_manufacturing.tree</field>
            <field name="model">mdc.rpt_stage_manufacturing</field>
            <field name="arch" type="xml">
                <tree editable="top" create="false" delete="false" string="Stage Manufacturing Report">
                    <field name="create_date" readonly="True"/>
                    <field name="lot_name" readonly="True"/>
                    <field name="product_id" readonly="True"/>
                    <field name="shift_code" readonly="True"/>
                    <field name="line_code" readonly="True"/>
                    <field name="stage_name" readonly="True"/>
                    <field name="workstation_name" readonly="True"/>
                    <field name="employee_code" readonly="True"/>
                    <field name="employee_name" readonly="True"/>
                    <field name="gross_weight" readonly="True"/>
                    <field name="product_weight" readonly="True"/>
                    <field name="sp1_weight" readonly="True"/>
                    <field name="sp2_weight" readonly="True"/>
                    <field name="quality_weight" readonly="True"/>
                    <field name="total_hours" readonly="True"/>
                </tree>
            </field>
        </record>

        <!-- Graph view: default view for Stage Manufacturing Report -->
        <record id="mdc_rpt_stage_manufacturing_graph" model="ir.ui.view">
            <field name="name">mdc.rpt_stage_manufacturing.graph</field>
            <field name="model">mdc.rpt_stage_manufacturing</field>
            <field name="arch" type="xml">
                <graph string="Employee evolution">
                    <field name="employee_name" type="row"/>
                    <field name="product_weight" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Pivot view: default view for Stage Manufacturing Report -->
        <record id="mdc_rpt_stage_manufacturing_pivot" model="ir.ui.view">
            <field name="name">mdc.rpt_stage_manufacturing.pivot</field>
            <field name="model">mdc.rpt_stage_manufacturing</field>
            <field name="arch" type="xml">
                <pivot string="Employee evolution">
                    <field name="employee_name" type="row"/>
                    <field name="lot_name" type="col"/>
                    <field name="product_weight" type="measure"/>
                    <field name="total_hours" type="measure"/>
                </pivot>
            </field>
        </record>

    </data>

