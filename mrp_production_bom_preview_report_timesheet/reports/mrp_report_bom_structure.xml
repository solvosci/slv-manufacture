<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="mrp_preview_bom_report" inherit_id="mrp_production_bom_preview_report.mrp_preview_bom_report">
        <xpath expr="//tbody" position="inside">
            <t t-if="data['mo'].task_id">
                <t t-set="task_id" t-value="data['mo'].sudo().task_id" />
                <tr>
                    <td name="td_product">
                        <span class="pl-3">â†’</span>
                        <a href="#" t-att-data-res-id="task_id.id" t-att-data-model="task_id._name" class="o_mrp_bom_action">
                            <t t-esc="task_id.name"/>
                        </a>
                    </td>
                    <td name="td_qty" class="text-right">
                        <span t-field="task_id.effective_hours" t-options="{'widget': 'float', 'decimal_precision': 'Product Unit of Measure'}"/>
                    </td>
                    <td name="td_uom">
                        Hours
                    </td>
                    <td name="td_total" class="text-right">
                        <span t-esc="data['mo'].total_task_amount()" t-options="{'widget': 'monetary', 'decimal_precision': 'Product Unit of Measure', 'display_currency': data['mo'].currency_id}"/>
                    </td>
                </tr>
            </t>
        </xpath>
    </template>

</odoo>
