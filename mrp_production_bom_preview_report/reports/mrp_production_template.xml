<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_mrp_production_bom_document_pdf">
        <t t-call="web.external_layout">
            <div class="page">
                <div class="oe_structure"/>

                <h2>Manufacture Order #<span t-field="o.name"/></h2>

                <div class="row mt32 mb32">
                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>Product</strong>
                        <p class="m-0">
                            <t t-esc="o.product_id.name"/>
                        </p>
                    </div>
                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>Quantity</strong>
                        <p class="m-0">
                            <t t-if="o.state == 'done'">
                                <span t-field="o.qty_producing"/>
                            </t>
                            <t t-else="">
                                <span t-field="o.qty_producing"/>
                                <span class="ml-1 mr-1">/</span>
                                <span t-field="o.product_qty"/>
                            </t>

                        </p>
                    </div>
                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>Production Cost</strong>
                        <span t-field="o.total_cost" />
                    </div>
                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>State</strong>
                        <p class="m-0">
                            <span t-field="o.state"/>
                        </p>
                    </div>
                </div>
                <t t-set="move_ids" t-value="o.get_bom_move_report()"/>
                <table class="o_list_table table table-sm table-hover table-striped o_list_table_ungrouped o_section_and_note_list_view" style="table-layout: fixed;">
                    <thead>
                        <tr class="active">
                            <th name="th_product">Product</th>
                            <th name="th_qty" class="text-right">Quantity</th>
                            <th name="th_uom">UoM</th>
                            <th name="th_total" class="text-right">Total Cost</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="move_ids" t-as="move">
                            <tr>
                                <td name="td_product">
                                    <t t-esc="move.product_id.name"/>
                                </td>
                                <td name="td_qty" class="text-right">
                                    <t t-if="o.state == 'done'">
                                        <span t-field="move.quantity"/>
                                    </t>
                                    <t t-else="">
                                        <span t-field="move.quantity_done"/>
                                        <span class="ml-1 mr-1">/</span>
                                        <span t-field="move.product_uom_qty"/>
                                    </t>
                                </td>
                                <td name="td_uom">
                                    <t t-if="o.state == 'done'">
                                        <t t-esc="move.uom_id.name"/>
                                    </t>
                                    <t t-else="">
                                        <t t-esc="move.product_uom.name"/>
                                    </t>
                                </td>
                                <td name="td_total" class="text-right">
                                    <t t-if="o.state == 'done'">
                                        <span t-field="move.value" />
                                    </t>
                                    <t t-else="">
                                        <t
                                            t-esc="move.product_id.standard_price * move.quantity_done"
                                            t-options="{'widget': 'monetary', 'decimal_precision': 'Product Unit of Measure', 'display_currency': move.product_id.currency_id}}"
                                        />
                                    </t>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

    <template id="report_mrp_production_bom_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="mrp_production_bom_preview_report.report_mrp_production_bom_document_pdf"/>
            </t>
        </t>
    </template>

</odoo>
