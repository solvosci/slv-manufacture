<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_production_form_view" model="ir.ui.view">
        <field name="name">mrp.production.form (in MRP Timesheet Link)</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field
            name="groups_id"
            eval="[(4, ref('project.group_project_manager'))]"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="before">
                <field name="project_id" attrs="{'readonly': [('state', '=', 'done')], 'invisible': [('state', 'in', ['draft', 'cancel'])]}"/>
                <field name="task_id" domain="[('project_id', '=', project_id), ('production_id', '=', False)]" attrs="{'invisible': [('project_id', '=', False)], 'required': [('project_id', '!=', False)]}"/>
            </xpath>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button type="object" name="action_view_timesheets" class="oe_stat_button" icon="fa-clock-o" attrs="{'invisible': [('timesheet_count', '=', 0)]}">
                    <field name="timesheet_count" widget="statinfo" string="Timesheet"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
