<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_fcd_weight_scale_mrp_wizard" model="ir.ui.view">
        <field name="name">fcd.weight.scale.mrp.wizard</field>
        <field name="model">fcd.weight.scale.mrp.wizard</field>
        <field name="arch" type="xml"> 
            <form string="WARNING!!">
                <sheet>
                    <h4>Are you sure you want to delete the last weighing of this purchase order line?</h4>
                </sheet>
                <footer>
                    <button string="No" class="btn-primary" special="cancel" />
                    <button
                        name="remove_last_weight_scale"
                        class="btn-secondary"
                        type="object"
                        string="Yes" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
