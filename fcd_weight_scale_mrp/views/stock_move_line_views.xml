<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_move_line_operation_tree_inherit" model="ir.ui.view">
        <field name="name">stock.move.line.tree (FCD Weight Scale)</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_name']" position="after">
                <field name="lot_qty" />
            </xpath>
        </field>
    </record>

    <record id="view_move_line_tree_inherit" model="ir.ui.view">
        <field name="name">stock.move.line.tree (FCD Weight Scale)</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='qty_done']" position="before">
                <field name="secondary_uom_qty" />
                <field name="secondary_uom_id" />
            </xpath>
        </field>
    </record>

    <record id="stock_move_line_view_search_inherited" model="ir.ui.view">
        <field name="name">stock.move.line.view.inherited</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.stock_move_line_view_search" />
        <field name="arch" type="xml">
            <field name="product_id" position="before">
                <field name='lot_id' />
            </field>
        </field>
    </record>

</odoo>
