<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_template_property_form" model="ir.ui.view">
        <field name="name">Product Template Production Secondary Unit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock_secondary_unit.view_template_property_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='stock_secondary_uom_id']" position="after">
                <field
                    name="production_secondary_uom_id"
                    domain="[('product_tmpl_id', '=', id)]"
                    options="{'no_create': True}"
                />
            </xpath>
        </field>
    </record>

</odoo>
