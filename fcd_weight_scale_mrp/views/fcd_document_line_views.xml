    <record id="fcd_document_line_view_tree_inherit" model="ir.ui.view">
        <field name="name">fcd.document.line.tree (fcd_weight_scale_mrp)</field>
        <field name="model">fcd.document.line</field>
        <field name="inherit_id" ref="fcd_purchase_order.fcd_document_line_view_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='subtotal']" position="before">
                <field name="quantity_real_kg" />
                <field name="price_real_kg" />
            </xpath>
        </field>
    </record>

