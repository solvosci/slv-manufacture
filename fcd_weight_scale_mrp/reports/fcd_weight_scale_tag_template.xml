<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_tag_document_pdf">
      <t t-set="doc" t-value="doc.with_context({'lang':doc.stock_move_id.partner_id.lang})"/>
      <div class="page" style="font-size: 9px; page-break-after: always;">
          <div>
            <div class="row" style="border-bottom: 1px solid black">
                <div class="col-4" style="border-right: 1px solid black">
                    <div class="row">
                      <span class="col-12 d-block font-weight-bold" style="font-size: 16px">CIGURRIA O CAMPO S.L</span>
                    </div>
                    <div class="row pb-1 mb-1" style="border-bottom: 1px solid black;">
                      <span class="col-12 d-block">
                        <t t-esc="doc.produced_partner_id.second_name_fcd"/>
                        <t t-esc="doc.produced_partner_id.city"/>
                        (<t t-esc="doc.produced_partner_id.state_id.name"/>)
                        <t t-esc="doc.produced_partner_id.phone"/>
                      </span>
                    </div>

                    <div class="row">
                      <div class="col-12">
                        <span class="font-weight-bold">SHIPPER 1º:</span>
                        <span><t t-esc="doc.produced_partner_id.street"/></span>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-12">
                        <span class="font-weight-bold">STREET:</span>
                        <span><t t-esc="doc.produced_partner_id.city"/></span>
                      </div>
                    </div>
                    <div class="row pb-1 mb-1" style="border-bottom: 1px solid black;">
                      <div class="col-12">
                        <span class="font-weight-bold">Nº R.S.I:</span>
                        <span><t t-esc="doc.produced_partner_id.street2"/></span>
                      </div>
                    </div>

                    <div class="d-flex mt-1 pb-1" style="font-size: 8px;">
                      <div class="pl-1 pr-1" style="width: 60%;border: 1px solid black">
                          <span class="d-block font-weight-bold">SHIP:</span>
                          <span>
                            <t t-esc="doc.fcd_document_line_id.fcd_document_id.ship"/>
                            <span> - </span>
                            <t t-esc="doc.fcd_document_line_id.fcd_document_id.ship_license_plate"/>
                          </span>
                      </div>
                      <div class="font-weight-bold" style="width: 40%;border: 1px solid black; border-radius: 50%; margin-left: 5px;">
                        <span class="d-block w-100 text-center">ES</span>
                        <span class="d-block w-100 text-center"><t t-esc="doc.fcd_document_line_id.fcd_document_id.sanity_reg"/></span>
                        <span class="d-block w-100 text-center">CE</span>
                      </div>
                    </div>
                    <div class="row font-weight-bold pt-1" style="border-top: 1px solid black;">
                        <div class="col-6">
                          <span>D.EXPIRY</span>
                        </div>
                        <div class="col-6 text-right">
                          <t t-if="doc.expiration_date">
                            <t t-esc="doc.expiration_date.strftime('%d-%m-%Y')"/>
                          </t>
                          <t t-else="">
                          </t>
                        </div>
                      </div>
                      <div class="row pb-1 font-weight-bold">
                        <div class="col-6">
                          <span>D.PACKING</span>
                        </div>
                        <div class="col-6 text-right">
                          <t t-esc="doc.packaging_date.strftime('%d-%m-%Y')"/>
                        </div>
                    </div>
                </div>
                <div class="col-8">
                  <div class="row">
                    <div class="col-8">
                      <div class="row">
                        <div class="col-12">
                          <span class="font-weight-bold" style="font-size: 10px">COMERCIAL DESIGNATION:</span>
                          <span class="d-block font-weight-bold" style="font-size: 11px"><t t-esc="doc.output_product_id.name"/></span>
                        </div>
                      </div>
                      <div class="row" style="border-bottom: 1px solid black">
                        <div class="col-12 mt-1 mb-1">
                          <span class="font-weight-bold">SCIENTIFIC NAME:</span> 
                          <t t-esc="doc.output_product_id.scientific_name"/>
                          <span class="d-block">
                            <span class="font-weight-bold">FAO:</span>
                            <t t-esc="doc.output_product_id.fao"/>
                          </span>
                        </div>
                      </div>
                      <div class="row" style="border-bottom: 1px solid black">
                        <div class="col-12 mt-1 mb-1">
                          <span class="font-weight-bold">CAPTURE ZONE AND SUBZONE:</span>
                          <span class="d-block mb-1"><t t-esc="doc.fcd_document_line_id.fcd_document_id.fao_zone"/></span>
                          <span class="font-weight-bold">METHOD OF PRODUCTION:</span>
                          <t t-esc="doc.fcd_document_line_id.fcd_document_id.production_method"/>
                        </div>
                      </div>
                      <div class="row"> 
                        <div class="col-6" style="border-right: 1px solid black; font-weight: bold;">
                          <t t-if="doc.pieces">
                            <span class="d-block">
                              PIECES:
                              <span style="font-size: 18px; padding-left: 4px;">
                                <t t-esc="doc.pieces"/>
                              </span>
                            </span>
                            <span class="d-block">NET WEIGHT: <span style="font-size: 24px; font-weight: bold; text-align: right;"><t t-esc="doc.quantity"/><span style="font-size: 12px;">KG</span></span></span>
                          </t>
                          <t t-else="">
                            <span class="d-block">NET WEIGHT: </span>
                            <span class="d-block" style="font-size: 32px; font-weight: bold; text-align: right;"><t t-esc="doc.quantity"/><span style="font-size: 12px;">KG</span></span>
                          </t>
                        </div>
                        <div class="col-6 pt-1 ">
                          <div class="mb-1">
                            <span class="font-weight-bold">CALIBER: </span>
                            <t t-esc="doc.output_product_id.caliber"/>
                          </div>
                          <div class="mb-1">
                            <span class="font-weight-bold">FISHING GEAR: </span>
                            <t t-esc="doc.fcd_document_line_id.fcd_document_id.fishing_gear"/>
                          </div>
                          <div>
                            <span class="font-weight-bold">PRESENTATION: </span>
                            <span style="position: fixed;"><t t-esc="doc.output_product_id.presentation_id.name"/></span>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-4" style="border-left: 1px solid; border-bottom: 1px solid; height: 160px; display: flex; justify-content: center; align-items: center;">
                      <img t-att-src="'/report/barcode/?type=QR&amp;value=%s&amp;width=500&amp;height=500' % (doc.generate_qr())" style="width: 135px; height: 135px"/>
                      <div class="row mt-1 font-weight-bold" style="font-size: 10px;">
                        <div class="col-5">
                          <span>LOT:</span>
                        </div>
                        <div class="col-7 text-right">
                          <t t-esc="doc.fcd_document_line_id.lot_id.name"/>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
            </div>
          </div>
          <div class="mt-1">
            <div class="row" style="border: 1px solid black; font-size: 9px;">
              <div class="col-4">
                <span>Conservation method between 0ºC-5ºC</span>
              </div>
              <div class="col-8" style="border-left: 1px solid black">
                <t t-if="doc.output_product_id.categ_id.get_fcd_type() == 'fish'">
                  <span>Contains fish. May contain traces of crustaceans and/or molluscs.</span>
                </t>
                <t t-elif="doc.output_product_id.categ_id.get_fcd_type() == 'crustaceans_sulphites'">
                  <span>Contains crustaceans and sulfites. May contain traces of fish and/or molluscs.</span>
                </t>
                <t t-elif="doc.output_product_id.categ_id.get_fcd_type() == 'molluscs'">
                  <span>Contains mollusks. May contain traces of fish and/or crustaceans.</span>
                </t>
              </div>
            </div>
          </div>
          <div>
            <div class="row" style="height: 65px; border: 1px solid black; border-top: none; border-left: 1px dashed black">
              <div class="col-12 text-center m-2">
                <t t-set="barcode" t-value="doc.generate_barcode()"/>
                <img t-att-src="'/report/barcode/?type=Code128&amp;value=%s&amp;width=2000&amp;height=40' % (barcode)" style="height: 40px; width: 100%"/>
                <span class="d-block text-center"><t t-esc="barcode"/></span>
              </div>
            </div>
          </div>
      </div>
    </template>

    <template id="report_tag_pdf">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="doc">
                <t t-call="fcd_weight_scale_mrp.report_tag_document_pdf"/>
            </t>
        </t>
    </template>

</odoo>
