<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mrp_unbuild_bom_total_percentage_view_tree" model="ir.ui.view">
            <field name="name">mrp.unbuild.bom.cust.qty.tree (percentage) (mrp_unbuild_cust_alu_analytics)</field>
            <field name="model">mrp.unbuild.bom.totals</field>
            <field name="inherit_id" ref="mrp_unbuild_bom_cust_qty.mrp_unbuild_bom_total_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='expected_qty']" position="after">
                    <field name="total_qty_percentage" widget="percentage"/>
                </xpath>
            </field>
        </record>

        <record id="mrp_unbuild_bom_quants_reduced_view" model="ir.ui.view">
            <field name="name">mrp.unbuild.bom.quants.view.tree (from mrp_unbuild_cust_alu_analytics)</field>
            <field name="priority" eval="100"/>
            <field name="model">mrp.unbuild.bom.quants</field>
            <field name="arch" type="xml">
                <tree class="tablet_font_size">
                    <field name="bom_line_id" />
                    <field name="custom_qty" />
                    <field name="product_uom_id" />
                    <button name="unlink"
                        class="btn btn-danger"
                        type="object"
                        string="DELETE"
                    />
                </tree>
            </field>
        </record>

        <!-- Tree View Tablet -->
        <record id="mrp_unbuild_bom_totals_reduced_view" model="ir.ui.view">
            <field name="name">mrp.unbuild.bom.totals.view.tree (from mrp_unbuild_cust_alu_analytics)</field>
            <field name="priority" eval="100"/>
            <field name="model">mrp.unbuild.bom.totals</field>
            <field name="arch" type="xml">
                <tree class="tablet_font_size">
                    <field name="deco_danger" invisible="1"/>
                    <field name="bom_line_id"/>
                    <field name="total_qty"/>
                    <button name="product_weighing"
                        class="btn btn-success"
                        type="object"
                        string="WEIGHT"
                    />
                    <button name="action_mrp_unbuild_bom_quants_views"
                        class="btn btn-warning"
                        type="object"
                        string="CORRECT"
                        context="{'bom_line_id': bom_line_id}"
                    />
                </tree>
            </field>
        </record>
    </data>
</odoo>