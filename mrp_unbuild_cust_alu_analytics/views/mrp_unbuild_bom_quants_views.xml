<odoo>
    <data>
        <record id="mrp_unbuild_bom_quants_view_form_extended_only_save" model="ir.ui.view">
            <field name="name">mrp.unbuild.bom.quants.view.form (extended) (only save)</field>
            <field name="model">mrp.unbuild.bom.quants</field>
            <field name="inherit_id" ref="mrp_unbuild_bom_cust_qty.mrp_unbuild_bom_quants_view_form_extended"/>
            <field name="arch" type="xml">
                <xpath expr="//footer/button[@name='save_and_new']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//footer/button[@name='save_and_close']" position="attributes">
                    <attribute name="string">Save</attribute>
                </xpath>
            </field>
        </record>

        <record id="mrp_unbuild_bom_quants_reduced_view" model="ir.ui.view">
            <field name="name">mrp.unbuild.bom.quants.view.tree (from mrp_unbuild_cust_alu_analytics)</field>
            <field name="priority" eval="100"/>
            <field name="model">mrp.unbuild.bom.quants</field>
            <field name="arch" type="xml">
                <tree class="tablet_font_size">
                    <field name="bom_line_id" />
                    <field name="custom_qty" />
                    <field name="product_uom_id" />
                    <button name="unlink"
                        class="btn btn-danger"
                        type="object"
                        string="DELETE"
                    />
                </tree>
            </field>
        </record>
    </data>
</odoo>

