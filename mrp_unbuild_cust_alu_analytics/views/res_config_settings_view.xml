<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="res_config_settings_unbuild_workflow_view_form" model="ir.ui.view">
        <field name="name">res.config.settings (mrp_unbuild_workflow)</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='mrp_mps']/.." position="after">
                <h2>Unbuild</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="xml_analytic_path"/>
                            <div class="text-muted"/>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="xml_analytic_path"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
