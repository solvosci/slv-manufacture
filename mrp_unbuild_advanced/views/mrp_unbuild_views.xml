<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_unbuild_form_view" model="ir.ui.view">
        <field name="name">mrp.unbuild.form (in mrp_unbuild_advanced)</field>
        <field name="model">mrp.unbuild</field>
        <field name="inherit_id" ref="mrp.mrp_unbuild_form_view"/>
        <field name="groups_id" eval="[(4,ref('stock.group_stock_manager'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_validate']" position="after">
                <button
                    name="action_back_draft"
                    string="Back to draft"
                    type="object"
                    states="done"
                    class="oe_highlight"
                />
            </xpath>
            <xpath expr="//field[@name='product_id']" position="before">
                <field name="unbuild_date"/>
            </xpath>
        </field>
    </record>
</odoo>
